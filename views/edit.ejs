<%- include("./partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%= blogs.title%>
        <form
            class="ui form"
            action="/blogs/<%= blogs._id%>?_method=PUT"
            method="POST"
        >
            <div class="field">
                <label>Title </label>
                <input
                    type="text"
                    name="blog[title]"
                    value="<%= blogs.title%>"
                />
            </div>

            <div class="field">
                <label>image </label>
                <input
                    type="text"
                    name="blog[image]"
                    value="<%= blogs.image%>"
                />
            </div>

            <div class="field">
                <label>Blog content</label>
                <textarea name="blog[body]"><%= blogs.body%> </textarea>
            </div>

            <input class="ui violet basic button" type="submit" />
        </form>
    </div>
</div>

<%- include("./partials/footer") %>
